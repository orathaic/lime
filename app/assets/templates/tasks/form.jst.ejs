<form id="task-form">

  <div id="task-title-field" class="field">
    <input type="text" name="task[title]">
  </div>

  <div id="task-description-field" class="field">
    <textarea name="task[description]">Description (optional) </textarea>
  </div>

  <div id="task-submit-button" class="field">
    <input type="submit" value="Add task">
  </div>

</form>